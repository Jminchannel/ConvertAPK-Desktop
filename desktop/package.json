{
  "name": "convertapk-desktop",
  "version": "1.0.3",
  "description": "ConvertAPK desktop app V1.0.3",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^30.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.convertapk.desktop",
    "productName": "ConvertAPK",
    "icon": "build/icon.ico",
    "win": {
      "icon": "build/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "icon.png"
      },
      {
        "from": "../templates/Tubbim",
        "to": "templates/Tubbim",
        "filter": [
          "**/*",
          "!**/.gradle/**",
          "!**/.idea/**",
          "!**/.kotlin/**",
          "!**/app/build/**",
          "!**/build/**"
        ]
      },
      {
        "from": "../dist/backend",
        "to": "backend"
      },
      {
        "from": "../web/frontend/dist",
        "to": "frontend"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ConvertAPK",
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
